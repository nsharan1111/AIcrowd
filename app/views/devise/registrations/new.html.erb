<!-- masthead -->
<div class="masthead masthead-open">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">
				<h1>Sign up</h1>
				<p>One account per individual. If you're joining as part of a company/organization, please create an account for each individual.</p>
			</div>
		</div>
	</div>
</div>
<!-- /masthead -->

<!-- section -->
<div class="section-p-sm">
	<div class="container-fluid">
		<div class="row">
			<div class="col-12">

				<%= form_for resource, as: resource_name, url: registration_path(resource_name), html: { class: 'form-rg' } do |f| %>
				<!-- social log in buttons -->
				<div class="btn-set-social">
					<%= link_to participant_oauth2_generic_omniauth_authorize_path, {class: "btn btn-secondary btn-block"} do%>
		              <img src="/assets/img/icon-crowdai.svg">Sign Up with CrowdAI
		            <% end %>

		            <%= link_to participant_github_omniauth_authorize_path, {class: "btn btn-github btn-block"} do%>
		              <img src="/assets/img/icon-github.svg">Sign Up with GitHub
		            <% end %>
				</div>
				<!-- /social log in buttons -->

				<h4 class="mb-4">Or sign up with email</h4>

				<div class="form-group">
					<label for="username">Choose a user handle</label>
					<%= f.text_field :name, placeholder: 'User handle', class: "form-control", type: 'text', id:"username" %>
					<small id="usernameHelp" class="form-text text-muted">Max. of X characters. No spaces</small>
				</div>

				<div class="form-group">
					<label for="email">Email</label>
					<%= f.text_field :email, placeholder: 'Email address', class: 'form-control' %>
				</div>

				<div class="form-group">
					<label for="password">Create a new password</label>
					<%= f.password_field :password, placeholder: 'Choose a password', class: 'form-control' %>
					<small id="passwordHelp" class="form-text text-muted">Min. of 8 characters</small>
				</div>

				<div class="form-group">
					<label for="retypePassword">Re-type new password</label>
					<%= f.password_field :password_confirmation, placeholder: 'Re-type password', class: "form-control" %>
				</div>

				<div class="form-group form-check mb-3">
					<label class="form-check-label" for="termsAgreement">By signing up, I agree to terms in the <%= link_to 'Terms of Service', terms_path %>
						and the <%= link_to 'Privacy Policy', privacy_path %></label>
					</div>
					<%= f.button 'Create account', type: 'submit', class: 'btn btn-primary, btn-block' %>
					<% end %>
				</div>
			</div>    
		</div>
	</div>
	<!-- /section -->

	<!-- section -->
	<div class="section-p-md border-top bg-white">
		<div class="container-fluid">
			<div class="row">
				<div class="col">
					<div class="section-header-mb-sm">
						<h4>Already registered?</h4>
					</div>
					<%= link_to "Log in", new_participant_session_path, {class: "btn btn-secondary", role:"button"} %>
				</div>
			</div>
		</div>
	</div>
	<!-- /section -->
</div>