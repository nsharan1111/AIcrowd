<%= concept(Participant::Cell::ParticipantMasthead,
                @participant,
                current_participant: current_participant) %>

<!-- sub-nav bar -->
<div class="sub-nav-bar sticky-top sub-nav">
  <div class="container-fluid">
    <ul class="nav tabs">
      <li class="nav-item">
        <a class="nav-link active" data-toggle='tab' href="#tab-challenges" onclick="return false;">Challenges</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle='tab' href="#tab-posts" onclick="return false;">Posts</a>
      </li>
      <li class="nav-item">
        <a class="nav-link" data-toggle='tab' href="#tab-bio" onclick="return false;">Bio</a>
      </li>


      <!-- more dropdown xs -->
      <li class="nav-item dropdown more-xs">
        <a class="nav-link dropdown-toggle" data-toggle="dropdown" href="#" role="button" aria-haspopup="true" aria-expanded="false"><svg width="16" height="4" xmlns="http://www.w3.org/2000/svg"><path d="M2 0C.9 0 0 .9 0 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zm12 0c-1.1 0-2 .9-2 2s.9 2 2 2 2-.9 2-2-.9-2-2-2zM8 0C6.9 0 6 .9 6 2s.9 2 2 2 2-.9 2-2-.9-2-2-2z" fill="#5D5F60" fill-rule="nonzero"/></svg></a>
        <div class="dropdown-menu dropdown-menu-right">
          <a class="dropdown-item" href="#">Bio</a>
        </div>
      </li>
      <!-- /more dropdown xs -->
    </ul>
  </div>
</div>
<!-- /sub-nav bar -->

<div class="tab-content">
  <div id='tab-challenges' class="tab-pane fade show active">
    <% if @challenges.any? %>
      <section class="section-p-sm bg-light">
        <div class="container-fluid">
          <div class="row">
            <%= concept(Challenge::Cell::ListDetail,
                            collection: @challenges,
                            current_participant: current_participant) %>
          </div>
        </div>
      </section>
    <% else %>
      <%= "#{@participant.name} hasn't entered any challenges yet..." %>
    <% end %>
  </div>

  <div id='tab-posts' class="tab-pane fade">
    <% if @posts.any? %>
        <%= concept(Discussion::Cell::ParticipantComment,
                          collection: @posts,
                          current_participant: current_participant) %>
    <% else %>
      <%= "#{@participant.name} hasn't made any posts yet..." %>
    <% end %>
  </div>

  <div id='tab-bio' class="tab-pane fade">
    <% if @participant.bio.present? %>
      <!-- section -->
        <section class="section-p-md">
          <div class="container-fluid">
            <div class="row">
              <div class="col-12">

                <div class="md-content">
                  <%= @participant.bio %>
                </div>
              </div>
            </div>
          </div>
        </section>
        <!-- /section -->
    <% else %>
      <%= "Apparently #{@participant.name} prefers to keep an air of mystery about them..." %>
    <% end %>
  </div>
</div>